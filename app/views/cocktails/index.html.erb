<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/jcLcWL8D7AQ);">
  <div class="banner-container">
    <h1><strong>My cocktails</strong></h1>
  </div>
</div>

<div class="container">
  <h3>All cocktails</h3>

  <div class="card-container">
      <% @cocktails.each do |cocktail| %>
          <%= link_to cocktail_path(cocktail) do %>
          <div class="card" style="width: 18rem;">
            <% if cocktail.picture_url == nil %>
              <%= image_tag "https://source.unsplash.com/featured/?drink,cocktail", class: "card-img-top" %>
            <% else %>
              <%= image_tag cocktail.picture_url, class: "card-img-top"%>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= cocktail.name %></h5>
              <div class="details">
                <i class="far fa-heart"></i>
              </div>
            </div>
          </div>
          <% end %>
      <% end %>
  </div>
</div>
