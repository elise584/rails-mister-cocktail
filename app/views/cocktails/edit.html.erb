<div class="container">
<h3>🍹 Edit my cocktail 🍹</h3>
<%= simple_form_for(@cocktail) do |c| %>
  <%= c.input :name %>
  <%= c.input :picture_url %>
  <%= c.input :description %>
  <%= c.submit class: 'btn btn-primary'%>
  <%= c.button :button, "Cancel", type: "reset", class: "btn btn-danger" %>
<% end %>
</div>
